version: 0.1
log:
  fields:
    service: registry
    environment: production
storage:
  cache:
    blobdescriptor: inmemory
  filesystem:
    rootdirectory: <%= @registry_path %>
http:
  addr: <%= @registry_http_addr %>
  secret: "<%= @http_secret %>"
  headers:
    X-Content-Type-Options: [nosniff]
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
auth:
  token:
    realm: <%= @token_realm %>/api/v3/auth/token
    service: docker
    issuer: <%= @registry_issuer %>
    rootcertbundle: <%= @rootcertbundle %>
