global:
  scrape_interval: <%= node['gitlab']['prometheus']['scrape_interval'] %>s
  scrape_timeout: <%= node['gitlab']['prometheus']['scrape_timeout'] %>s

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']
<% if node['gitlab']['node-exporter']['enable'] %>
  - job_name: node
    static_configs:
      - targets: ['localhost:9100']
<% end -%>
